<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mehdi.kashmirobserver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kashmirobserver.news.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kashmirobserver.news.view.DetailNews"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName="com.kashmirobserver.news.view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kashmirobserver.news.view.settings.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>